  <div class="container">
    <div class="row">
      <div class="col-9 mx-auto">
        <div class="col-5 float-left">
          <%= image_tag("beauty_top.jpg", :class => "rounded", :id => "card_img0") %>
        </div>
        <div class="col-7 float-right" id="card_search">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">絞り込み検索</h5>
              <div class="row">
                <div class="col-2">
                  <p class="card-text">エリア</p>
                </div>
                <div class="col-10">
                  <div class="col-flex">
                     <p>＞関東</p>
                     <p>＞神奈川県周辺</p>
                     <p>＞川崎、蒲田、大井町</p>
                  </div>
                  <div class="col-flex">
                    <p>＞川崎</p>
                    <p>＞川崎駅</p>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-2">
                  <p class="card-text">料金</p>
                </div>
                <div class="col-10 float-right">
                  ここに入力フォーム
                </div>
              </div>
            </div>
          
          
            <%= button_tag(type: "button", class: "mr-1 btn btn-warning", data: {target: "#exampleModalCenter", toggle: "modal"}) do %> XXXボタン名XXX <% end %> 
            
            <!-- モーダルの設定 -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">モーダルのタイトル</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <p>モーダルのコンテンツ文。</p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
                    <button type="button" class="btn btn-primary">変更を保存</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="btn-group col-8 offset-md-2" role="group" aria-label="..." id="search_bar">
        <%= link_to "安い", {controller: 'beauties', action: 'search'}, {method: :get, class: 'btn btn-secondary w-100'} %>
        <%= link_to "高い", {controller: 'beauties', action: 'search'}, {method: :get, class: "btn btn-secondary w-100"} %>
        <%= link_to "新しい", {controller: 'beauties', action: 'search'}, {method: :get, class: "btn btn-secondary w-100"} %>
        <%= link_to "古い", {controller: 'beauties', action: 'search'}, {method: :get, class: "btn btn-secondary w-100"} %>
        <%= link_to "割引額", {controller: 'beauties', action: 'search'}, {method: :get, class: "btn btn-secondary w-100"} %>
        <%= link_to "期限", {controller: 'beauties', action: 'search'}, {method: :get, class: "btn btn-secondary w-100"} %>
        <button type="button" class="btn btn-secondary w-100" value="map">地図検索</button>
      </div>
    </div>
    <div class="countainer">
      <div class="row">
        <div class="col-9 mx-auto">
          <div class="col-3 sticky">
            <div class="btn-group-vertical-lg sticky" role="group" aria-label="...">
              <%= link_to "安い", {controller: 'beauties', action: 'search'}, {method: :get, class: 'btn btn-secondary w-100'} %>
              <%= link_to "高い", {controller: 'beauties', action: 'search'}, {method: :get, class: "btn btn-secondary w-100"} %>
              <%= link_to "新しい", {controller: 'beauties', action: 'search'}, {method: :get, class: "btn btn-secondary w-100"} %>
              <%= link_to "古い", {controller: 'beauties', action: 'search'}, {method: :get, class: "btn btn-secondary w-100"} %>
              <%= link_to "割引額", {controller: 'beauties', action: 'search'}, {method: :get, class: "btn btn-secondary w-100"} %>
              <%= link_to "期限", {controller: 'beauties', action: 'search'}, {method: :get, class: "btn btn-secondary w-100"} %>
              <button type="button" class="btn btn-secondary w-100" value="map">地図検索</button>
            </div>
          </div>
          <% @campaigns.each do |campaign| %>
            <%= render partial:"campaigns", locals: { campaign: campaign } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>